/*******************************
Main theme
********************************/

@avatarWidth : 180px;
@mainColor: #049372;
@secondColor: #034738;


@media only screen and (min-device-width: 20px) and (min-width: 20px){
    html {
        font-size: 1rem;
    }
    h1 a{
        font-size: 2rem;
    }
    
    nav a{
        font-size: 1.5rem;
    }
    h2 {
        display: inline-block;
        font-size: 3rem;
        margin-bottom: 0;
    }
    i {
        margin-right: 2rem;
    }
    body {
        font-family: "Montserrat", "Open Sans", "Helvetica Neue", "Arial", sans- serif;
        a {
            color: @secondColor;
            &:hover {
                color: @mainColor;
            }
        }
        padding: 0 0.5rem;
    }
    p {
        text-align: justify;
    }
    #menu-toggle {
        display: none;
    }
    #menu-toggle:checked ~ div nav {
        max-height: 300px;
    }
    #nav-container {
        font-size: 2.5rem;
        background-color: @mainColor;
        font-family: 'Amaranth', sans-serif;
        padding: 0 0.5rem;
        margin: 0 -0.5rem;
        h1 {
            margin: 0;
            display: inline-block;
            a {
                letter-spacing: 0.4rem;
                display: block;
            }
            a~a {
                margin-left: 2.5rem;
            }
        }
        a {
            text-decoration: none;
            color: black;
        }
        >label {
            margin: auto 0.5rem auto 0;
        }
        nav {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s linear;
        }
        li {
            list-style-type: none;
            display: block;
            text-align: right;
            h3 {
                margin: 0;
                padding: 0.5rem 0.8rem;
                &:hover {
                    background-color: @secondColor;
                }
            }
        }
        ul {
            padding: 0;
            margin: 0;
        }
    }
    #title-container {
        display: flex;
        justify-content: space-between;
    }
    .avatar {
        height: @avatarWidth;
        border-radius: 50%;
        display: block;
        margin: 1.5rem auto 0 auto;
    }
    #intro {
        margin-bottom: 3rem;
        :nth-child(1) {
            text-align: left;
            margin-left:calc(~"(100% - @{avatarWidth})/2 ");
        }
        :nth-child(2) {
            display: block;
            margin-right: calc(~"(100% - @{avatarWidth})/2 ");
            text-align: right;
        }
        :nth-child(3) {
            display: block;
            margin-right: calc(~"(100% - @{avatarWidth})/2 + @{avatarWidth}/7");
            text-align: right;
        }
        :nth-child(4) {
            text-align: left;
            margin-left:calc(~"(100% - @{avatarWidth})/2 + @{avatarWidth}/10");
        }
    }
    img.project {
        width: 100%;
    }
    #projects {
        h3{
            margin-bottom: 0.5rem;
        }
        h5 {
            margin-left: 1rem;
            text-indent: 1.4rem;
            font-style: italic;
            i {
                display: none;
            }
        }
        img {
            max-width: 100%;
            max-height: auto;
        }
        .project-image>div {
            text-align: center;
        }
    }
    #experiences {
        h3 {
            margin: 2rem 0 1rem 0 ;
        }
        h5,
        h6 {
            margin: 0.2rem 0 0 1rem;
        }
        >ul>li{
            margin-top: 0.8rem;
            >ul>li{
                font-size: 0.8rem;
            }
        }

    }
    #education {
        .date {
            vertical-align: top;
        }
        .content {
            padding-left: 1.5rem;
        }
        table {
            border-collapse: collapse;
            font-size: 1.5rem;
            margin-top: 2rem;
        }
        td {
            padding-bottom: 1em;
        }
    }
    #skills {
        flex: 1 1 auto;
        >ul {
            font-size: 1.5rem;
        }
        h3 {
            display: inline;
            margin: 0 2rem 0 0;
            img {
                width: 1.2em;
                bottom: 0;
            }
        }
        ul {
            padding: 0 1rem;
        }
        li {
            list-style-type: none;
            display: flex;
            justify-content: space-between;
            span {
                padding-top: 0.15rem;
            }
        }
        .progress-bar {
            height: 1rem;
            background-color: #ebedef;
            border-radius: 1rem;
            span {
                background-color: @secondColor;
                display: block;
                height: 100%;
                border-radius: 1rem;
            }
            margin-bottom: 0.6rem;
        }
        i{
            margin-right: 0;
        }
    }
    #contact {
        ul {
            padding: 0 1rem;
            margin-top: 2rem;
        }
        li {
            margin-bottom: 0.8rem;
            list-style-type: none;
            a {
                text-decoration: none;
            }
        }
    }
}

@media only screen and (min-device-width: 480px) and (min-width: 480px) {
    h2 {
        font-size: 2rem;
    }
    nav a{
        font-size: 1rem;
    }
}


/*******************************
Desktop theme
********************************/

@media only screen and (min-device-width: 768px) and (min-width: 768px) {
    
    i{
        margin-right: 1rem;
    }
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }
    body {
        h2 {
            margin-top: 2rem;
            font-size: 1.6rem;
        }
        padding: 0 2rem;
    }
    #menu-toggle-icon {
        display: none;
    }
    #title-container {
        display: inline;
    }
    #nav-container {
        padding: 0 2rem;
        margin: 0 -2rem;
        font-size: 1rem;
        nav {
            max-height: 300px;
            margin-top: 2rem;
            float: right;
            ul {
                display: flex;
            }
            li {
                :hover {
                    background-color: @mainColor;
                    color: @secondColor;
                }
                h3 {
                    padding: 0.5rem 0 0.5rem 1.5rem;
                }
            }
        }
    }
    #projects {
        .project-content {
            display: flex;
            align-items: center;
            >:first-child {
                width: 40%;
            }
            p {
                margin-top: 0;
                margin-left: 1rem;
            }
        }
        h5 {
            text-align: right;
            font-size: 1.2rem;
            margin-top: 0;
            :first-child {
                position: relative;
                top: -1rem;
                display: inline-block;
            }
            :last-child {
                position: relative;
                bottom: -1rem;
                display: inline-block;
            }
        }
        h3 {
            font-size: 1.4rem;
            margin-left: 5rem;
            margin-top: 1rem;
        }
    }
    #skills {
        margin-right: 3rem;
        max-width: 400px;
        >ul {
            font-size: 1rem;
        }
    }
    #education {
        max-width: 400px;
        table {
            font-size: 1rem;
        }
    }
}


/*******************************
Large theme
********************************/

@media only screen and (min-device-width: 980px) and (min-width: 980px) {
    body {
        padding: 0 4rem;
    }
    #nav-container {
        padding: 0 4rem;
        margin: 0 -4rem;
    }
}


/*******************************
XLarge theme
********************************/

@media only screen and (min-device-width: 1280px) and (min-width: 1280px) {
    body {
        padding: 0 6rem;
    }
    #nav-container {
        padding: 0 6rem;
        margin: 0 -6rem;
    }
    
    .flex-container-no-wrap {
        display: flex;
        justify-content: space-around;
    }
    .flex-element{
        min-width: 350px;
        margin-right: 2rem;
    }
}


/*******************************
XXLarge theme
********************************/

@media only screen and (min-device-width: 1920px) and (min-width: 1920px) {
    body {
        padding: 0 10rem;
    }
    #nav-container {
        padding: 0 10rem;
        margin: 0 -10rem;
    }
}
